	<title>dialogKit: Objects: TextBox</title>
	
	<include src="settings/main.xml" />
	
	<div class="content">

<!-- 

 -->

	    <div class="sectionName">
	        TextBox
	    </div>
	    
	    <div class="sectionDescription">
	        A container for displaying text info.
	    </div>

<!-- 

 -->

	    <div class="method">
	        
	        <div class="init"><b>TextBox</b>(posSize, text)</div>
	        
	        <p>
	           <b>posSize</b> The position and size of the text box. 
	        </p>
	        
	        <p>
	           <b>text</b> The text to be displayed in the text box.
	        </p>
	        
	    </div>
	    
<!-- 

 -->
	        
        <h4>Methods</h4>

        <div class="method">
	        <div class="methodName">show</div>
	        <div class="arguments">value</div>
	        <p>
	            Show the text box by passing a value of <i>True</i> or hide it by passing a value of <i>False</i>.
	        </p>
	    </div>

	    <div class="method">
	        <div class="methodName">get</div>
	        <p>
	            Returns the text in the text box.
	        </p>
	    </div>
        
        <div class="method">
	        <div class="methodName">set</div>
	        <div class="arguments">value</div>
	        <p>
	            Set the text in the text box.
	        </p>
	    </div>

